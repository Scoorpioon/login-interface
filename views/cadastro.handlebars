<h1>Cadastro</h1>
<hr>

{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card p-4">
    <form action="/cadastrar/enviado" method="post">
        <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome" placeholder="Digite seu nome..." class="form-control mb-3" required>
    
        <label for="idade">Idade:</label>
        <input type="number" name="idade" id="idade" class="form-control mb-3" placeholder="Digite sua idade... " min="4" max="112" required>
    
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" class="form-control mb-3" placeholder="Usuario@email.com..." required>
    
        <label for="senha">Senha:</label>
        <input type="password" name="senha" id="senha" class="form-control mb-3" placeholder="Digite sua senha..." required>

        <label for="conf-senha">Confirmar senha:</label>
        <input type="password" name="confsenha" id="conf-senha" class="form-control mb-3" placeholder="Confirme sua senha..." required>
    
        <input type="submit" value="Cadastrar" class="btn btn-primary mt-4">
        <a href="/" style="position: relative; top: 13px; text-decoration: none;">Já sou um usuário</a>
    </form>
</div>